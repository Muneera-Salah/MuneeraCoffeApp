<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.example.labtop.muneeracoffe.MainActivity">


    <ImageView
        android:id="@+id/coffe1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/coffe2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/coffe2"
        android:layout_toStartOf="@+id/coffe2"
        android:scaleType="centerCrop"
        android:src="@drawable/coffe1" />

    <ImageView
        android:id="@+id/coffe2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/coffe3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffe2" />

    <ImageView
        android:id="@+id/coffe3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffe3" />

    <ImageView
        android:id="@+id/maplocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/SaudiArabia"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/SaudiArabia"
        android:layout_toStartOf="@+id/SaudiArabia"
        android:src="@drawable/maplocation" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coffe2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="26dp"
        android:fontFamily="monospace"
        android:text="Muneera Coffee we provide the best coffee in the world" />

    <TextView
        android:id="@+id/SaudiArabia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="monospace"
        android:text="Saudi Arabia"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/maplocation"
        android:layout_alignStart="@+id/maplocation"
        android:layout_alignTop="@+id/time"
        android:src="@drawable/clock" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/clock"
        android:layout_toRightOf="@+id/clock"
        android:fontFamily="monospace"
        android:text="From 7:00AM To 11:00PM"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/maplocation"
        android:layout_alignStart="@+id/maplocation"
        android:layout_below="@+id/maplocation"
        android:layout_marginTop="16dp"
        android:src="@drawable/smartphone"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/maplocation"
        android:layout_toRightOf="@+id/maplocation"
        android:text="0568772040"
        android:fontFamily="monospace"
        android:textSize="15sp"/>

</RelativeLayout>
